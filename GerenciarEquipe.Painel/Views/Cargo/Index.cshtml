@model IEnumerable<GerenciarEquipe.Painel.Models.CargoModel>

@{
    ViewBag.Title = "Cargo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<article class="content items-list-page">
    <div class="title-search-block">
        <div class="title-block">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="title">
                        Cargo
                        @Html.ActionLink("Adicionar", "Create", new object { }, new { @class = "btn btn-primary btn-sm rounded-s" })
                    </h3>
                    <p class="title-description"> Lista de Cargo </p>
                </div>
            </div>
        </div>
    </div>
    <div class="card items">
        <ul class="item-list striped tabela">
            <li class="item item-list-header ">
                <div class="item-row">
                    <div class="item-col fixed item-col-check">
                        <label class="item-check" id="select-all-items">
                            <span></span>
                        </label>
                    </div>
                    <div class="item-col item-col-header item-col-title">
                        <div>
                            <span> @Html.DisplayNameFor(model => model.nome)</span>
                        </div>
                    </div>
                    <div class="item-col item-col-header item-col-title">
                        <div>
                            <span> @Html.DisplayNameFor(model => model.descicao)</span>
                        </div>
                    </div>
                    <div class="item-col item-col-header fixed item-col-actions-dropdown"></div>
                </div>
            </li>

            @foreach (var item in Model)
            {
                <li class='item'>
                    <div class='item-row'>
                        <div class='item-col fixed item-col-check'>
                            <label class='item-check' id='select-all-items'>
                                <span></span>
                            </label>
                        </div>
                        <div class="item-col fixed pull-left item-col-title">
                            <div class="item-heading"> @Html.DisplayNameFor(model => model.nome)</div>
                            <div>
                                <a href="" class="">
                                    <h4 class="item-title">@Html.DisplayFor(model => item.nome)</h4>
                                </a>
                            </div>
                        </div>
                        <div class="item-col fixed pull-left item-col-title">
                            <div class="item-heading"> @Html.DisplayNameFor(model => model.descicao)</div>
                            <div>
                                <a href="" class="">
                                    <h4 class="item-title">@Html.DisplayFor(model => item.descicao)</h4>
                                </a>
                            </div>
                        </div>
                        <div class="item-col fixed item-col-actions-dropdown">
                            <div class="item-actions-dropdown">
                                <a class="remove" href="@Url.Action("Delete", new { id = item.id})">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                            </div>
                            <div class="item-actions-dropdown">
                                <a class="edit" href="@Url.Action("Edit", new { id = item.id })">
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</article>